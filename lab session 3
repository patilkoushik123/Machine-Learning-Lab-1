import numpy as np
import pandas as pd

# Load the dataset
file_path = 'C:/Users/year3/Downloads/DCT_withoutduplicate 7.csv'
data = pd.read_csv(file_path)

# Identify the class label column and feature columns
class_column = data.columns[-1]
feature_columns = data.columns[:-1]

# Get the unique classes in the dataset
unique_classes = data[class_column].unique()

# Separate the data for the first two classes
class1_data = data[data[class_column] == unique_classes[0]][feature_columns].values
class2_data = data[data[class_column] == unique_classes[1]][feature_columns].values

# Calculate the mean (centroid) for each class
centroid1 = np.mean(class1_data, axis=0)
centroid2 = np.mean(class2_data, axis=0)

# Calculate the spread (standard deviation) for each class
spread1 = np.std(class1_data, axis=0)
spread2 = np.std(class2_data, axis=0)

# Calculate the Euclidean distance between the two centroids
distance = np.linalg.norm(centroid1 - centroid2)

# Output the results
print(f"Centroid of Class 1: {centroid1}")
print(f"Centroid of Class 2: {centroid2}")
print(f"Spread (Standard Deviation) of Class 1: {spread1}")
print(f"Spread (Standard Deviation) of Class 2: {spread2}")
print(f"Distance between Class 1 and Class 2 centroids: {distance}")

